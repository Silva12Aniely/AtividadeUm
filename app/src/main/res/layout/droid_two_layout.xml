<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_droid"
    android:orientation="vertical"
    tools:context=".DroidTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_android" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="10dp"
            android:textColorHint="#FFD3D3D3"
            android:textSize="25sp"
            android:background="@drawable/borderbutton"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/borderbutton"
            android:hint="Email"
            android:padding="10dp"
            android:textColorHint="#FFD3D3D3"
            android:textSize="25sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/borderbutton"
            android:hint="Password"
            android:padding="10dp"
            android:textColorHint="#FFD3D3D3"
            android:textSize="25sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/borderbutton"
            android:hint="Confirm Password"
            android:padding="10dp"
            android:textColorHint="#FFD3D3D3"
            android:textSize="25sp" />

        <Button
            android:onClick="abrirJanela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/button"
            android:textSize="20sp"
            android:textColor="#FFEF687A"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttwo"
            android:text="Log In"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textAllCaps="false"/>


    </LinearLayout>
</LinearLayout>